<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Search User Profiles</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Optional CSS -->
</head>
<body>
  <h1>Search User Profiles</h1>

  <form method="GET" action="/api/user-profiles/search">
    <input type="text" name="name" placeholder="Search by name">
    <input type="text" name="interests" placeholder="Search by interests">
    <button type="submit">Search</button>
  </form>

  <% if (profiles && profiles.length > 0) { %>
    <h2>Search Results:</h2>
    <table border="1">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Interests</th>
          <th>Contribution Points</th>
          <th>Profile Picture</th>
        </tr>
      </thead>
      <tbody>
        <% profiles.forEach(profile => { %>
          <tr>
            <td><%= profile.name %></td>
            <td><%= profile.email %></td>
            <td><%= profile.interests %></td>
            <td><%= profile.contribution_points %></td>
            <td>
              <% if (profile.profile_pic) { %>
                <img src="<%= profile.profile_pic %>" alt="Profile Pic" width="50">
              <% } else { %>
                N/A
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else if (profiles) { %>
    <p>No profiles found matching your search.</p>
  <% } %>
</body>
</html>


<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .thick-bordered-table,
        .thick-bordered-table th,
        .thick-bordered-table td {
            border: 2px solid black !important;
        }

        .thick-bordered-table {
            border-collapse: collapse;
        }

        footer {
            background: #e7f0ff;
            text-align: center;
            padding: 20px;
            font-size: 0.9rem;
            color: #555;
        }

        footer a {
            margin: 0 10px;
            color: #007acc;
            text-decoration: none;
        }

        footer a:hover {
            color: #005c99;
        }
    </style>

</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark"
        style="background: linear-gradient(135deg, #007bff, #00c6ff)">
        <div class="container">
            <img src="/images/reward.png" alt="Movie" style="width:40px;" class="rounded-pill">
            <a class="navbar-brand" href="/rewards" style="color: burlywood;"> Collection</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"></li>
                <div class="text-center mt-4">
                    <% if (user && user.role==='admin' ) { %>
                        <a href="/admin_bal" class="nav-link d-flex align-items-center">
                            <i class="fas fa-house fa-lg" style="position: relative; top: 1px;"></i>
                            <span class="ms-2"> </span>
                        </a>
                    <% } else { %>
                        <a href="/dashboard" class="nav-link d-flex align-items-center">
                            <i class="fas fa-house fa-lg" style="position: relative; top: 1px;"></i>
                            <span class="ms-2"> </span>
                        </a>
                    <% } %>
                </div>
                <a href="/admin_bal" class="nav-link d-flex align-items-center">
                    <i class="fas fa-house fa-lg" style="position: relative; top: 1px;"></i>
                    <span class="ms-2"> </span>
                </a>
                </li>
                <li class="nav-item">
                    <span class="nav-link active" style="pointer-events: none;">
                        <i class="fas fa-user me-1"></i>
                        <%= user.username %> (<%= user.role %>)
                    </span>
                </li>
                <% if (user && user.role==='admin' ) { %>
                    <li class="nav-item">
                        <a class="nav-link active" href="/addRewards">Add new rewards</a>
                    </li>
                    <% } %>
                        <li class="nav-item">
                            <a class="nav-link active" href="/suggestion">Suggestion Box</a>
                        </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <form class="d-flex" action="/rewards/search" method="GET">
                        <input type="text" name="q" class="form-control me-2" placeholder="Search by name, criteria..."
                            style="width: 500px;" required>
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <br>
        <div class="text-center">
            <h2>Reward Badges for top contributors</h2>
        </div>
        <br>

        <table class="table table-bordered table-striped small text-center thick-bordered-table">

            <thead>
                <style>
                    .thick-bordered-table thead th {
                        background-color: lightskyblue !important;
                    }
                </style>

                <tr>
                    <th width="100">Reward Name</th>
                    <th width="100">Description</th>
                    <th width="50">Criteria</th>
                    <th width="50">Badge</th>
                    <% if (user && user.role==='admin' ) { %>
                        <th width="50">Edit</th>
                        <th width="50">Delete</th>
                        <% } %>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < reward_badges.length; i++) { %>
                    <tr>
                        <td><a href="#" <%=reward_badges[i].rewardId %>>
                                <%= reward_badges[i].name %>
                            </a></td>
                        <td>
                            <%= reward_badges[i].description %>
                        </td>
                        <td>
                            <%= reward_badges[i].criteria %>
                        </td>
                        <td>
                            <img src="/images/<%= reward_badges[i].image %>" width="20%">
                        </td>
                        <% if (user && user.role==='admin' ) { %>
                            <!-- Edit Link -->
                            <td><a href="/editReward/<%= reward_badges[i].rewardId %>">Edit</a></td>
                            <!-- Delete Link -->
                            <td><a href="/deleteReward/<%= reward_badges[i].rewardId %>"
                                    onclick="return confirm('Are you sure you want to delete this reward?')">Delete</a>
                            </td>
                            <% } %>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <section>
        <div class="container mt-5" data-aos="fade-up" data-aos-duration="1000">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h4 class="card-title">Have a Reward Idea?</h4>
                    <p class="card-text">We value your input! Suggest a new reward badge to motivate our community.</p>
                    <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#suggestionForm">
                        <i class="fas fa-lightbulb me-2"></i> Suggest a Reward
                    </button>

                    <!-- Collapsible Form -->
                    <div id="suggestionForm" class="collapse mt-4">
                        <form action="/suggestion" method="POST" class="text-start" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="reward_name" class="form-label">Reward Name</label>
                                <input type="text" class="form-control" id="reward_name" name="reward_name" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3"
                                    required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="criteria" class="form-label">Criteria (how many points)</label>
                                <input type="text" class="form-control" id="criteria" name="criteria" required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Badge Image Filename</label>
                                <input type="file" class="form-control" id="image" name="image"
                                    placeholder="e.g., star.png" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">Submit Suggestion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
        <p>&copy; 2025 SG Community & Leaderboard. All rights reserved.</p>
        <div>
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
    </footer>
</body>

</html>
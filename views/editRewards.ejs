<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<title>Editing rewards</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark"
        style="background: linear-gradient(135deg, #007bff, #00c6ff)">
        <div class="container">
            <img src="/images/reward.png" alt="Movie" style="width:40px;" class="rounded-pill">
            <a class="navbar-brand" href="/rewards" style="color: burlywood;"> Collection</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"></li>
                <a href="/" class="nav-link d-flex align-items-center">
                    <i class="fas fa-house fa-lg" style="position: relative; top: 1px;"></i>
                    <span class="ms-2"> </span>
                </a>
                </li>
                <li class="nav-item">
                    <span class="nav-link active" style="pointer-events: none;">
                        <i class="fas fa-user me-1"></i>
                        <%= user.username %> (<%= user.role %>)
                    </span>
                </li>
                <% if (user && user.role==='admin' ) { %>
                    <li class="nav-item">
                        <a class="nav-link active" href="/addRewards">Add new rewards</a>
                    </li>
                <% } %>
                <li class="nav-item">
                    <a class="nav-link active" href="/suggestion">Suggestion Box</a>
                </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <form class="d-flex" action="/rewards/search" method="GET">
                        <input type="text" name="q" class="form-control me-2" placeholder="Search by name, criteria..."
                            style="width: 500px;" required>
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <br>
        <div class="text-center">
            <h2>Edit reward details</h2>
        </div>
        <br>
        <div class="text-center">
            <form action="/editReward/<%= reward.rewardId %>" method="POST" enctype="multipart/form-data">
                <!-- Hidden rewardId -->
                <input type="hidden" name="rewardId" value="<%= reward.rewardId %>">

                <label for="name">Reward Name:</label><br>
                <input type="text" id="name" name="name" value="<%= reward.name %>" required><br><br>

                <label for="description">Description:</label><br>
                <input type="text" id="description" name="description" value="<%= reward.description %>"
                    required><br><br>

                <label for="criteria">Points Required (pts):</label><br>
                <input type="text" id="criteria" name="criteria" value="<%= reward.criteria %>" required><br><br>

                <label for="image">Image (upload new to replace):</label><br>
                <input type="file" id="image" name="image" accept="image/*" required><br><br>  

                <button type="submit" class="btn btn-primary">Save Changes</button><br><br>
                <div class="btn-group-custom">
                    <a href="/rewards" class="btn btn-warning">Change your mind?</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        footer {
            background: #e7f0ff;
            text-align: center;
            padding: 20px;
            font-size: 0.9rem;
            color: #555;
        }

        footer a {
            margin: 0 10px;
            color: #007acc;
            text-decoration: none;
        }

        footer a:hover {
            color: #005c99;
        }

        .card {
            border-radius: 10px;
            transition: transform 0.2s ease-in-out;
        }

        .card:hover {
            transform: scale(1.05);
        }
    </style>

</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark"
        style="background: linear-gradient(135deg, #007bff, #00c6ff)">
        <div class="container">
            <img src="/images/reward.png" alt="Movie" style="width:40px;" class="rounded-pill">
            <a class="navbar-brand" href="/rewards" style="color: burlywood;"> Collection</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"></li>
                <a href="/admin_bal" class="nav-link d-flex align-items-center">
                    <i class="fas fa-house fa-lg" style="position: relative; top: 1px;"></i>
                    <span class="ms-2"> </span>
                </a>
                </li>
                <li class="nav-item">
                    <span class="nav-link active" style="pointer-events: none;">
                        <i class="fas fa-user me-1"></i>
                        <%= user.username %> (<%= user.role %>)
                    </span>
                </li>
                <% if (user && user.role==='admin' ) { %>
                    <li class="nav-item">
                        <a class="nav-link active" href="/addRewards">Add new rewards</a>
                    </li>
                    <% } %>
                        <li class="nav-item">
                            <a class="nav-link active" href="/suggestion">Suggestion Box</a>
                        </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <form class="d-flex" action="/rewards/search" method="GET">
                        <input type="text" name="q" class="form-control me-2" placeholder="Search by name, criteria..."
                            style="width: 500px;" required>
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h3>Your Submitted Reward Suggestions</h3>

        <% if (reward_suggestion.length===0) { %>
            <p>You haven't submitted any suggestions yet.</p>
            <% } else { %>
                <div class="row">
                    <% reward_suggestion.forEach(suggestion=> { %>
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card shadow-sm">
                                <img src="/images/<%= suggestion.image %>" class="card-img-top" alt="Badge Image"
                                    style="height: 180px; object-fit: contain;">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= suggestion.reward_name %>
                                    </h5>
                                    <p class="card-text"><strong>Description:</strong>
                                        <%= suggestion.description %>
                                    </p>
                                    <p class="card-text"><strong>Criteria:</strong>
                                        <%= suggestion.criteria %>
                                    </p>
                                    <p class="card-text"><small class="text-muted">Submitted on <%=suggestion.created_at %></small></p><br>
                                    <% if (user && user.role === 'admin') { %>
                                        <a href="/deleteSuggestion/<%= suggestion.suggestionId %>" class="btn btn-warning" onclick="return confirm('Are you sure you want to delete this suggestion?')">Delete</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </div>


</body>

</html>
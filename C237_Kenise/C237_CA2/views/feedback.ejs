<!DOCTYPE html>
<html>
<head>
    <title>Event Feedback</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e0f7fa;
        }
        .star {
            color: gold;
            font-size: 1.2rem;
        }
        .btn-pink {
            background-color: #ffb6c1;
            color: black;
            border: none;
        }
        .btn-pink:hover {
            background-color: #ffa0b2;
            color: white;
        }
        .btn-info {
            background-color: #00bcd4;
            color: white;
            border: none;
        }
        .btn-info:hover {
            background-color: #00acc1;
        }
        .btn-soft-danger {
            background-color: #ff6b6b;
            color: white;
            border: none;
        }
        .btn-soft-danger:hover {
            background-color: #ff4c4c;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Event Feedback</h2>

        <!-- Search -->
        <form method="GET" action="/feedback" class="mb-4 d-flex justify-content-center">
            <input type="text" name="search" placeholder="Search by Event Name or Attendee" class="form-control w-50 me-2" value="<%= search %>">
            <button type="submit" class="btn btn-info">Search</button>
        </form>

        <!-- Feedback Table -->
        <% if (feedbacks.length > 0) { %>
        <table class="table table-bordered">
            <thead class="custom-thead" style="background-color: #ADD8E6;">
                <tr>
                    <th>Event Name</th>
                    <th>Attendee</th>
                    <th>Rating</th>
                    <th>Comments</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% feedbacks.forEach(fb => { %>
                    <tr>
                        <td><%= fb.event_name %></td>
                        <td><%= fb.attendee_name %></td>
                        <td>
                            <% for (let i = 0; i < fb.rating; i++) { %>
                                <span class="star">â˜…</span>
                            <% } %>
                        </td>
                        <td><%= fb.comments %></td>
                        <td>
                            <% if (user && user.role === 'admin') { %>
                                <a href="/feedback/edit/<%= fb.id %>" class="btn btn-info btn-sm me-1">Edit</a>
                                <a href="/feedback/delete/<%= fb.id %>" class="btn btn-soft-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
            <p class="text-center">No feedback found.</p>
        <% } %>

        <div class="text-center mt-4">
            <a href="/feedback/add" class="btn btn-pink me-2">Leave a Feedback</a>
            <a href="/dashboard" class="btn btn-secondary">Back to Events HomePage</a>
        </div>
    </div>
</body>
</html>





